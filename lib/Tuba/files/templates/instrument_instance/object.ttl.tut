% layout 'default', namespaces => [qw/dcterms gcis prov/];
%#
<<%= current_resource %>>
   dcterms:identifier "<%= $instrument_instance->identifier %>";
% for my $platform ($instrument_instance->platforms) %>
   gcis:Platform <<%= uri($platform) %>>;
} %

% for my $platform ($instrument_instance->instruments) %>
   gcis:Instrument <<%= uri($instrument) %>>;
} %

% for my $platform ($instrument_instance->datasets) %>
   gcis:Dataset <<%= uri($dataset) %>>;
} %

   a prov:Entity .
